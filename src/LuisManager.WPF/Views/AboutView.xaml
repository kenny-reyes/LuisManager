
<Window x:Class="LuisManager.WPF.Views.AboutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:LuisManager.WPF.ViewModels"
        xmlns:localization="clr-namespace:LuisManager.WPF.Localization"
        mc:Ignorable="d" MinHeight="500" MinWidth="700" Height="500" Width="700"
        d:DataContext="{d:DesignInstance {x:Type viewModels:AboutViewModel}}">

    <Grid Background="{StaticResource PrimaryMediumColorBrush}">
        <TextBlock Text="{x:Static localization:Resources.About_Text}" Style="{StaticResource AboutTextBlockStyle}"/>
    </Grid>
</Window>
